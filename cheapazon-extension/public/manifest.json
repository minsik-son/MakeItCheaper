{
    "manifest_version": 3,
    "name": "Deep Match",
    "version": "1.0.1",
    "description": "Automatically find the absolute lowest prices while you shop.",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.ca/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content.css",
                "assets/*"
            ],
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.ca/*"
            ]
        }
    ]
}