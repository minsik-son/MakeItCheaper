generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SourceProduct {
  id          String   @id @default(uuid())
  asin        String
  title       String
  price       Float
  currency    String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  matchResult MatchResult?

  @@unique([asin, currency])
}

model MatchResult {
  id              String   @id @default(uuid())
  sourceProductId String   @unique
  sourceProduct   SourceProduct @relation(fields: [sourceProductId], references: [id])
  
  aliTitle        String
  aliPrice        Float
  aliUrl          String
  aliImageUrl     String
  savings         Float
  currency        String
  aliProductId    String?  // Added for direct price refresh
  confidence      Int      @default(0) // 0-100
  
  lastChecked     DateTime @default(now())
}
