{
    "manifest_version": 3,
    "name": "MakeItCheaper",
    "version": "1.0.0",
    "description": "Amazon-AliExpress Price Optimizer",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*",
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.ca/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content.css",
                "assets/*"
            ],
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.ca/*"
            ]
        }
    ]
}